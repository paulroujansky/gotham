# Database Configuration
# The name of the database to connect to
DB_NAME=postgresDB

# Database host (use 'db' when running with Docker Compose, 'localhost' for local development)
DB_HOST=db

# Database user credentials
DB_USER=postgres
DB_PASS=password

# Database port (5432 is the default PostgreSQL port)
DB_PORT=5432

# Application Configuration
# Host to bind the application to (0.0.0.0 for all interfaces)
APP_HOST=0.0.0.0

# Port to run the application on
APP_PORT=8080